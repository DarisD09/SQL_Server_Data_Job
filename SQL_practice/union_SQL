SELECT
    quaterly_job_posting.job_title_short AS job_title,
    quaterly_job_posting.job_location AS location,
    quaterly_job_posting.job_via,
    quaterly_job_posting.job_posted_date:: DATE AS date,
    quaterly_job_posting.salary_year_avg
FROM
(
    SELECT *
    FROM january_job
    UNION ALL
    SELECT *
    FROM february_job
    UNION ALL
    SELECT *
    FROM march_job
) AS quaterly_job_posting
WHERE 
    quaterly_job_posting.job_title = 'Data Analyst' AND 
    quaterly_job_posting.salary_year_avg > 70000
ORDER BY
    quaterly_job_posting.salary_year_avg DESC